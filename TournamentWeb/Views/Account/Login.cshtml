
@model TournamentWeb.Models.ViewModels.LoginViewModel;
<div class="LoginPage Page">
    <div class="LoginWrap">
        <p>Log In</p>
        <div class="text-Error" asp-validation-summary="All"></div>
        <form class="form-default" asp-action="Login" asp-controller="Account" method="post">
            <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
            <div class="form-group">
                <label asp-for="UserName"></label>
                <input asp-for="UserName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
            </div>
            <div class="form-submit">
                <button class="btn btn-primary" type="submit">Log In</button>
            </div>
        </form>
    </div>
</div>
<style>

    .LoginPage {
        position: relative;
        height: calc(100vh - 284px);
        min-height: 608px;
    }

    .LoginWrap {
        padding: 42px;
        height: max-content;
        width: 324px;
        border-radius: 12px;
        background: #1c2123;
        position: absolute;
        transform: translate(-50%, -50%);
        left: 50%;
        top: 50%;
        box-shadow: 2px 2px 4px 0px #0000006e;
    }

        .LoginWrap p {
            text-align: center;
            font-size: 24px;
            margin: 0;
        }
</style>
