@model TournamentWeb.Models.Teams

<div class="PopupBox">
    <form class="form-default" asp-action="Join" asp-route-id="@TempData["id1"]" asp-controller="Tournaments" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="TeamName"> Team Name</label>
            <input asp-for="TeamName" class="form-control" />
        </div>
        <div class="form-submit">
            <button type="submit">Create</button>
        </div>
    </form>
</div>

<style>
    .PopupBox {
        height: max-content;
        width: 400px;
        border-radius: 24px;
        background: white;
        position: absolute;
        transform: translate(-50%, -50%);
        left: 50%;
        top: 50%;
        padding: 32px 42px 42px 42px;
        background: #1c2123;
    }
</style>