@model TournamentWeb.Models.ViewModels.LoginViewModel
        <div class="PopupBox">
            <p>Log In</p>
            <div class="text-Error" asp-validation-summary="All"></div>
            <form class="form-default" asp-action="Login" asp-controller="Account" method="post">
                <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
                <div class="form-group">
                    <label asp-for="UserName"></label>
                    <input asp-for="UserName" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" />
                </div>
                <div class="form-submit">
                    <button class="btn btn-primary" type="submit">Log In</button>
                </div>
            </form>
        </div>
    <style>


        .PopupBox {
            padding: 42px;
            height: max-content;
            width: 324px;
            border-radius: 12px;
            background: #1c2123;
            position: absolute;
            transform: translate(-50%, -50%);
            left: 50%;
            top: 50%;
            box-shadow: 3px 3px 18px 0px #0000009c;
        }

            .PopupBox p {
                text-align: center;
                font-size: 24px;
                margin: 0;
            }
    </style>