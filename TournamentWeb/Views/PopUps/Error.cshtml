
<div class="PopupBox">
    <p id="ErrorMsg" data-error="@TempData["ErrorMsg"]"></p>
</div>

<style>
    .PopupBox {
        height: 100px;
        width: 584px;
        border-radius: 24px;
        background: #1c2123;
        position: absolute;
        transform: translate(-50%, -50%);
        left: 50%;
        top: 50%;
    }

    #ErrorMsg {
        position: absolute;
        left: 50%;
        top: 48%;
        font-size: 20px;
        text-align: center;
        margin: 0;
        width: 100%;
        transform: translate(-50%, -50%);
    }
</style>

<script>
    let errorModel = new Object();
    errorModel.PlayerIsInTournament = "You are allready part of a team in this tournament";
    errorModel.TournamentIsFull = "Tournament is full"
    if ($('#ErrorMsg').length) {
        $("#ErrorMsg").ready(function () {
            $("#ErrorMsg").html(errorModel[$("#ErrorMsg").data("error")]);
        })
    }
</script>